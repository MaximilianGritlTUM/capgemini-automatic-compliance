<mvc:View
  controllerName="capgeminiappws2025.controller.Regulation"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:f="sap.ui.layout.form"
  displayBlock="true">

  <Page
    id="RegulationPageId"
    title="Regulation"
    showNavButton="true"
    navButtonPress="onNavBack">

    <content>
      <f:SimpleForm editable="true" layout="ResponsiveGridLayout">
        <Label text="Id" required="true"/>
        <Input 
          id="idInput"
          value="{Id}"
          required="true"
          valueStateText="ID is required"
        />

        <Label text="Title" />
        <Input value="{Title}" required="true"/>

        <Label text="Description" />
        <TextArea value="{Description}" rows="5" />
      </f:SimpleForm>
    </content>

    <footer>
      <Toolbar>
        <ToolbarSpacer/>
        <Button text="Save" type="Emphasized" press="onSave"/>
      </Toolbar>
    </footer>

  </Page>
</mvc:View>
